@model Monexia.Models.Goal
@{
    ViewData["Title"] = "Hedefi Düzenle";
}
<div class="max-w-xl mx-auto px-2 md:px-8 py-10 animate-fade-in-up">
    <div class="bg-white/90 dark:bg-gray-900/90 rounded-2xl shadow-2xl p-8">
        <h2 class="text-2xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-500 to-purple-400 dark:from-green-200 dark:via-blue-300 dark:to-purple-200">Hedefi Düzenle</h2>
        <form asp-action="Edit" method="post" class="flex flex-col gap-5">
            <input type="hidden" asp-for="Id" />
            <div>
                <label class="font-semibold">Hedef Adı</label>
                <input asp-for="Name" class="form-input w-full rounded-lg mt-1" required />
            </div>
            <div>
                <label class="font-semibold">Açıklama</label>
                <textarea asp-for="Description" class="form-input w-full rounded-lg mt-1" rows="2"></textarea>
            </div>
            <div>
                <label class="font-semibold">Kategori</label>
                <input asp-for="Category" class="form-input w-full rounded-lg mt-1" placeholder="Hedef kategorisi (ör. Tatil, Araba, Eğitim, vb.)" required />
            </div>
            <div class="flex gap-4">
                <div class="flex-1">
                    <label class="font-semibold">Hedef Tutarı (₺)</label>
                    <input asp-for="TargetAmount" type="number" min="1" step="0.01" class="form-input w-full rounded-lg mt-1" required />
                </div>
                <div class="flex-1">
                    <label class="font-semibold">Başlangıç Tarihi</label>
                    <input asp-for="StartDate" type="date" class="form-input w-full rounded-lg mt-1" required />
                </div>
                <div class="flex-1">
                    <label class="font-semibold">Bitiş Tarihi</label>
                    <input asp-for="EndDate" type="date" class="form-input w-full rounded-lg mt-1" required />
                </div>
            </div>
            <div class="flex gap-2 mt-4">
                <button type="submit" class="px-6 py-2 rounded-lg bg-blue-500 text-white hover:bg-blue-600 font-semibold text-base transition">Kaydet</button>
                <a asp-action="Index" class="px-6 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 font-semibold text-base transition">İptal</a>
            </div>
        </form>
    </div>
</div> 