@model Monexia.Models.Goal
@{
    ViewData["Title"] = "Hedefe Para Ekle";
}
<div class="max-w-lg mx-auto px-2 md:px-8 py-12 animate-fade-in-up">
    <div class="bg-white/95 dark:bg-gray-900/95 rounded-3xl shadow-2xl p-10 flex flex-col gap-8">
        <h2 class="text-3xl font-extrabold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-500 to-purple-400 dark:from-green-200 dark:via-blue-300 dark:to-purple-200 tracking-tight">Hedefe Para Ekle</h2>
        <div class="mb-6 p-5 rounded-2xl bg-gradient-to-r from-blue-100 via-green-100 to-purple-100 dark:from-blue-900 dark:via-green-900 dark:to-purple-900 flex flex-col gap-2 shadow-inner">
            <div class="flex items-center gap-2">
                <span class="font-bold text-xl text-gray-800 dark:text-gray-100">@Model.Name</span>
                <span class="ml-auto px-3 py-1 rounded-full text-xs font-semibold @(Model.Status == "Bitmiş" ? "bg-green-200 text-green-800" : "bg-yellow-100 text-yellow-700")">@Model.Status</span>
            </div>
            <div class="flex flex-wrap gap-2 text-base text-gray-600 dark:text-gray-300">
                <span class="px-2 py-1 rounded bg-purple-100 text-purple-700">@Model.Category</span>
            </div>
            <div class="flex gap-4 text-base mt-2">
                <span>Hedef: <b>@Model.TargetAmount ₺</b></span>
                <span>Mevcut: <b>@Model.CurrentAmount ₺</b></span>
                <span>Kalan: <b>@(Model.TargetAmount - Model.CurrentAmount) ₺</b></span>
            </div>
            <div class="w-full h-4 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden mt-2">
                <div class="h-full transition-all duration-700" style="width:@((Model.TargetAmount > 0 ? (decimal)Model.CurrentAmount / Model.TargetAmount * 100 : 0))%; background: linear-gradient(90deg, #34d399, #60a5fa, #a78bfa);"></div>
            </div>
        </div>
        <form asp-action="AddProgress" method="post" class="flex flex-col gap-6">
            <input type="hidden" asp-for="Id" />
            <div>
                <label class="font-semibold text-base">Eklenecek Tutar (₺)</label>
                <input name="amount" type="number" min="1" step="0.01" class="form-input w-full rounded-xl mt-2 py-3 px-4 text-lg shadow-sm focus:ring-2 focus:ring-green-400" required />
            </div>
            <div>
                <label class="font-semibold text-base">Açıklama</label>
                <input name="description" class="form-input w-full rounded-xl mt-2 py-3 px-4 text-lg shadow-sm focus:ring-2 focus:ring-green-400" placeholder="Açıklama..." />
            </div>
            <div class="flex gap-3 mt-6">
                <button type="submit" class="px-8 py-3 rounded-xl bg-green-500 text-white hover:bg-green-600 font-bold text-lg shadow transition">Ekle</button>
                <a asp-action="Index" class="px-8 py-3 rounded-xl bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 font-bold text-lg shadow transition">İptal</a>
            </div>
        </form>
    </div>
</div> 