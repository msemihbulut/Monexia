@model Monexia.Models.ApplicationUser
@using Monexia.Helpers

@{
    ViewData["Title"] = "Profilim";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4 py-10 animate-fade-in-up">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-2xl">
        <div class="relative h-32 bg-gradient-to-r from-purple-600 to-indigo-500 rounded-t-2xl">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="absolute top-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg animate-fade-in-down">
                    @TempData["SuccessMessage"]
                </div>
            }
        </div>
        <div class="p-8 relative">
            <div class="absolute -top-16 left-1/2 -translate-x-1/2">
                <img src="@(Model.ProfilePictureUrl ?? "/img/profile/default.png")" alt="Profil Resmi" class="w-32 h-32 rounded-full object-cover shadow-lg border-4 border-white dark:border-gray-800">
            </div>
            <div class="text-center mt-12">
                <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100">@Model.Name @Model.Surname</h2>
                <p class="text-gray-500 dark:text-gray-400">@Model.Email</p>
            </div>

            <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <span class="inline-block w-8 h-8 bg-indigo-100 dark:bg-indigo-900 text-indigo-600 dark:text-indigo-300 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498A1 1 0 0119.72 19h-3.28a2 2 0 01-2-2V5z" /></svg>
                        </span>
                        <div class="flex-grow">
                            <p class="text-sm text-gray-500 dark:text-gray-400">Telefon Numarası</p>
                            <p class="font-semibold text-gray-800 dark:text-gray-200">@(Model.PhoneNumber ?? "-")</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <span class="inline-block w-8 h-8 bg-pink-100 dark:bg-pink-900 text-pink-600 dark:text-pink-300 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        </span>
                        <div class="flex-grow">
                            <p class="text-sm text-gray-500 dark:text-gray-400">Doğum Tarihi</p>
                            <p class="font-semibold text-gray-800 dark:text-gray-200">@(string.IsNullOrEmpty(Model.BirthDate) ? "-" : AESHelper.Decrypt(Model.BirthDate))</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg md:col-span-2">
                        <span class="inline-block w-8 h-8 bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 12.414a2 2 0 00-2.828 0l-4.243 4.243M15 7a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
                        </span>
                        <div class="flex-grow">
                            <p class="text-sm text-gray-500 dark:text-gray-400">Adres</p>
                            <p class="font-semibold text-gray-800 dark:text-gray-200 break-all">@(Model.Address ?? "-")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex flex-col md:flex-row gap-4 justify-center mt-8">
                <a asp-action="Edit" class="px-8 py-3 rounded-xl bg-purple-600 text-white hover:bg-purple-700 transition shadow-lg text-center font-semibold">Bilgileri Düzenle</a>
                <a asp-action="ChangePassword" class="px-8 py-3 rounded-xl bg-pink-500 text-white hover:bg-pink-600 transition shadow-lg text-center font-semibold">Şifreyi Değiştir</a>
            </div>
        </div>
    </div>
</div>
