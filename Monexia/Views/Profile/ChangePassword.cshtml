@model Monexia.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4 py-10 animate-fade-in-up">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-md">
        <div class="bg-gradient-to-r from-pink-500 to-red-500 rounded-t-2xl px-10 py-6">
            <h2 class="text-3xl font-bold text-white text-center">Şifre Değiştir</h2>
        </div>

        <form asp-action="ChangePassword" method="post" class="p-10 flex flex-col gap-6">
            <div asp-validation-summary="ModelOnly" class="text-xs text-red-500 bg-red-50 dark:bg-red-900/20 p-3 rounded-lg"></div>
            <div>
                <label asp-for="OldPassword" class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Mevcut Şifre</label>
                <input asp-for="OldPassword" type="password" class="w-full rounded-lg border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="OldPassword" class="text-xs text-red-500 mt-1"></span>
            </div>
            <div>
                <label asp-for="NewPassword" class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Yeni Şifre</label>
                <input asp-for="NewPassword" type="password" class="w-full rounded-lg border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="NewPassword" class="text-xs text-red-500 mt-1"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">Yeni Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword" type="password" class="w-full rounded-lg border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500 mt-1"></span>
            </div>

            <div class="flex flex-col md:flex-row gap-4 justify-end mt-4">
                <a asp-action="Index" class="px-6 py-2 text-center rounded-xl bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-500 transition shadow">İptal</a>
                <button type="submit" class="px-6 py-2 rounded-xl bg-pink-600 text-white hover:bg-pink-700 transition shadow">Şifreyi Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
