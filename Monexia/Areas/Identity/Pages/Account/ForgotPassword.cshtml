@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-100 to-indigo-200 dark:from-[#0f172a] dark:to-[#1e293b] px-4 animate-fade-in-up">
    <div class="bg-white/90 dark:bg-[#1E1E2F]/90 rounded-2xl shadow-2xl w-full max-w-md px-8 py-10">
        <h2 class="text-3xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-400 dark:from-purple-300 dark:to-indigo-200 mb-2">Şifremi Unuttum</h2>
        <p class="text-center text-gray-500 dark:text-gray-300 mb-6 text-sm">Kayıtlı e-posta adresinizi girin, size şifre sıfırlama bağlantısı gönderelim.</p>
        <form method="post" class="flex flex-col gap-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-200 rounded-xl px-4 py-3 animate-fade-in-up text-sm" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300">E-posta</label>
                <input asp-for="Input.Email" class="w-full rounded-lg border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-xs text-red-500 mt-1"></span>
            </div>
            <button type="submit" class="w-full py-2 rounded-xl bg-gradient-to-r from-purple-600 to-indigo-500 hover:from-purple-700 hover:to-indigo-600 text-white font-semibold text-base transition shadow">Şifre Sıfırlama Bağlantısı Gönder</button>
        </form>
        <div class="mt-6 text-center text-sm">
            <a href="/Identity/Account/Login" class="text-purple-600 hover:underline">Girişe Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
